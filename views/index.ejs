<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input name="title" class="block px-5 rounded-md outline-none py-2 bg-zinc-800 w-full" type="text" placeholder="Title goes here">
                <textarea name="details" class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-800" placeholder="Write Your Task Here..."></textarea>
                <input class=" mt-2 bg-blue-600  rounded-md px-5 py-2" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex gap-4 p-10 flex-wrap">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-2xl tracking-tight"><%=val.replace('.txt', '')%></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-blue-500 inline-block " href="/file/<%=val %>">Read More...</a>
                            <a class="text-zinc-600" href="/edit/<%=val %>">Edit Filename</a>
                        </div>
                        
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-grey-300 bg-pink-800 px-3 py-2"> No Tasks Yet...</h1>
            <% } %>


        </div>

    </div>
</body>
</html>